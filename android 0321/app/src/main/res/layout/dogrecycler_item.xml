<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recCard2"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_uploading"
            app:shapeAppearanceOverlay="@style/roundedImageViewRound"/>
        
        <TextView
            android:id="@+id/recName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Name"
            android:textColor="#BFC5CC"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/recImage2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/recArea"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="20dp"

            android:text="location"
            android:textAlignment="center"
            android:textColor="#BFC5CC"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/recMoney"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="20dp"
            android:text="money"
            android:textAlignment="center"
            android:textColor="#BFC5CC"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>