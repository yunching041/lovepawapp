<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:id="@+id/recCard2"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_uploading"
            app:shapeAppearanceOverlay="@style/roundedImageViewRound" />

        <TextView
            android:id="@+id/recNeed"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="需求"
            android:textColor="#BFC5CC"
            android:textSize="18sp"
            android:layout_below="@+id/recImage2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/recArea"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="地區"
            android:textColor="#BFC5CC"
            android:textSize="14sp"
            android:layout_below="@+id/recNeed"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/recMoney"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="薪酬"
            android:textColor="#BFC5CC"
            android:textSize="14sp"
            android:layout_below="@+id/recArea"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>